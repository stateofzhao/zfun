<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zfun.simple">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.zfun.simple.letternavigation.LetterNavigationActivity"/>
        <activity android:name="com.zfun.simple.usecase.InteractorTestActivity"/>
        <activity android:name="com.zfun.simple.binary.BinaryActivity"/>
        <activity android:name="com.zfun.simple.pullrefresh.PullRefreshActivity"/>
        <activity android:name="com.zfun.simple.pullrefresh.XPullRefreshActivity"/>
        <activity android:name="com.zfun.simple.io.IOActivity"/>
    </application>

</manifest>
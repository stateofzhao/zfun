<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_binary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zfun.simple.binary.BinaryActivity"
    >

  <TextView
      android:id="@+id/tv1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将-10转换成二进制（计算机中存储的二进制-补码）："
      />

  <TextView
      android:id="@+id/tv2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将10转换成二进制（计算机中存储的二进制-补码）："
      />

  <TextView
      android:id="@+id/tv3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将二进制11111111111111111111111111110110（计算机中存储的二进制-补码）转换成十进制："
      />

  <TextView
      android:id="@+id/tv4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将二进制00001010（计算机中存储的二进制-补码）转换成十进制："
      />

  <TextView
      android:id="@+id/tv5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将-10转换成二进制（正常二进制-非补码）："
      />

  <TextView
      android:id="@+id/tv6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将10转换成二进制（正常二进制-非补码）："
      />

  <TextView
      android:id="@+id/tv7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将二进制11111111111111111111111111110110（正常二进制-非补码）转换成十进制："
      />

  <TextView
      android:id="@+id/tv8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="将二进制00001010（正常二进制-非补码）转换成十进制："
      />

</LinearLayout>
